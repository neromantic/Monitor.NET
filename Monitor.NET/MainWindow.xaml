        xmlns:local="clr-namespace:Monitor.NET"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="1440">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Background="#F8F8F8" BorderThickness="0 1 0 1" BorderBrush="#D8D8D8" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MaxWidth="250"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Border Padding="20 5 0 5">
                    <TextBox x:Name="txtNetworkAddress" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Padding="10 5" BorderBrush="#D8D8D8"></TextBox>
                </Border>
                <Border Grid.Column="1" Padding="10 5">
                    <Button x:Name="btnScan" Padding="10 0" Background="Black" Foreground="White" Click="btnScan_Click">Scannen</Button>
                </Border>
            </Grid>
        </Border>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border BorderThickness="0 0 1 0" BorderBrush="#D8D8D8">
                <ListView x:Name="listVAddr" BorderThickness="0">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn/>
                            <GridViewColumn x:Name="IPColumn" Header="IP"/>
                            <GridViewColumn x:Name="MACColumn" Header="MAC-Adresse"/>
                            <GridViewColumn x:Name="HostColumn"/>
                            <GridViewColumn x:Name="StateColumn"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
        </Grid>
        
    </Grid>
